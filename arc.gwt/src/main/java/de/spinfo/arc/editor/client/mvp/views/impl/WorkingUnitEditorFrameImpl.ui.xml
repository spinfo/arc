<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style src="MainApplicationStyle2.css">
	.title {
		text-align: center;
		margin-left: auto;
		margin-right: auto;
		margin-bottom: 5px;
		margin-top: auto;
		background-color: silver;
		font-size: 20px;
		font-weight: 900;
	}
	
	.infoBlock {
		
	}
	
	.info {
		text-align: left;
		margin-left: auto;
		margin-right: auto;
		padding: 10px;
		background-color: #E0F5FF;
		font-size: 20px;
		font-weight: normal;
	}
	
	.subInfo {
		text-align: left;
		margin-left: auto;
		margin-right: auto;
		padding: 15px;
		background-color: #EBF5FF;
		font-size: 20px;
		font-weight: normal;
	}
	</ui:style>

	<g:SplitLayoutPanel>
		<g:west size='300'>
			<g:DockLayoutPanel unit="PCT">
				<g:north size="1">
					<g:SimpleLayoutPanel></g:SimpleLayoutPanel>
				</g:north>
				<g:center>
					<g:DockLayoutPanel unit="PCT">
						<g:north size="8">
							<g:HorizontalPanel  ui:field="NavigationTitlePanel" width="100%" height="100%">
								<g:Label addStyleNames="{style.title}">Working Unit Editor</g:Label>
							</g:HorizontalPanel>

						</g:north>
						<g:center>
							<g:ScrollPanel >
								<g:VerticalPanel ui:field="westPanel" styleName="{style.padding}" width="100%" height="100%">
								</g:VerticalPanel>
							</g:ScrollPanel>
						</g:center>
					</g:DockLayoutPanel>
				</g:center>
				<g:east size="1">
					<g:SimpleLayoutPanel></g:SimpleLayoutPanel>
				</g:east>
				<g:south size="1">
					<g:SimpleLayoutPanel></g:SimpleLayoutPanel>
				</g:south>
				<g:west size="1">
					<g:SimpleLayoutPanel></g:SimpleLayoutPanel>
				</g:west>
			</g:DockLayoutPanel>
		</g:west>

		<g:center>
			<g:DockLayoutPanel unit="PCT">
				<g:north size="1">
					<g:SimpleLayoutPanel />

				</g:north>

				<g:center>
				<g:SimpleLayoutPanel ui:field="centerPanel"
				styleName=" {style.padding}">

				</g:SimpleLayoutPanel>
<!-- 					<g:ScrollPanel ui:field="centerPanel"> -->

<!-- 					</g:ScrollPanel> -->
				</g:center>
				<g:south size="1">
					<g:SimpleLayoutPanel />
				</g:south>
<!-- 				<g:west size="1"> -->
<!-- 					<g:SimpleLayoutPanel /> -->
<!-- 				</g:west> -->
<!-- 				<g:east size="1"> -->
<!-- 					<g:SimpleLayoutPanel /> -->
<!-- 				</g:east> -->
			</g:DockLayoutPanel>
		</g:center>

		<g:south size="150">
			<g:FlowPanel styleName="{style.padding}">
				<g:Label>This is the SOUTH panel</g:Label>
			</g:FlowPanel>

		</g:south>

	</g:SplitLayoutPanel>
</ui:UiBinder> 