<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui'>
	<ui:style>
	.panel {
		background-color: white; 
	}
	
	.title {
		font-size: 18px;
	}
	</ui:style>
	<g:HTMLPanel styleName="{style.panel}" ui:field="panel">
		<table>

			<tr>
				<td>
					<g:HorizontalPanel>
						<g:Image url="gwtcomp-icons/edit_add.png" />
						<g:Label ui:field="titleLabel" styleName="{style.title}">Add new Chapter</g:Label>

					</g:HorizontalPanel>

				</td>

			</tr>
			<tr>
				<td>
					<g:Label ui:field="questionToUserLabel">enter title</g:Label>
				</td>
				<!-- <td><g:Label ui:field="categoryOrdinal">enter ordinal</g:Label></td> -->
			</tr>
			<tr>
				<td>
					<g:TextBox ui:field="categoryInputTextBox" width="80%" height="100%"/>
				</td>

				<!-- <td><g:TextBox ui:field="categoryNumberTextBox"/></td> -->
			</tr>
			<tr>
				<td>
					<g:Label ui:field="questionToUserLabelComment">enter comment</g:Label>
				</td>
			</tr>
			<tr>
				<td>
					<g:TextArea ui:field="categoryCommentTextArea" width="80%" height="100%"/>
				</td>
			</tr>
			<tr>
				<td align="left">
					<g:Button ui:field="cancelBtn">cancel</g:Button>
					<g:Button ui:field="okBtn">ok</g:Button>
					<!-- </td> -->
					<!-- <td align="right"> -->
<!-- 					<g:Button ui:field="okDefaultBtn">fill in default</g:Button> -->


				</td>
			</tr>
		</table>
	</g:HTMLPanel>
</ui:UiBinder>