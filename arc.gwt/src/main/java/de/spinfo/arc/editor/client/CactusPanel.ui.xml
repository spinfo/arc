<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
	<ui:style>
	.table-style {
		background: red;
	}
	</ui:style>
	
	<g:TabLayoutPanel barUnit='PX' barHeight='20'>

		<g:tab>
			<g:header>view by chapters</g:header>
			<g:DockLayoutPanel unit="PCT">
				<g:west size='30'>
					<g:SimpleLayoutPanel ui:field="chapterPanel">
					</g:SimpleLayoutPanel>
				</g:west>
				<g:center styleName="{style.table-style}">
				<g:ScrollPanel  ui:field="contentPanel">
				
				
				</g:ScrollPanel>
				</g:center>
			</g:DockLayoutPanel>
		</g:tab>
		<g:tab>
			<g:header>view by languages</g:header>
			<g:SimpleLayoutPanel ui:field="languagePanel">

			</g:SimpleLayoutPanel>
		</g:tab>


	</g:TabLayoutPanel>


</ui:UiBinder> 