<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>ARC Editor</display-name>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>classpath:spring-editor.xml</param-value>
	</context-param>

	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener
		</listener-class>
	</listener>

	<servlet>
		<servlet-name>editor</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>editor</servlet-name>
		<url-pattern>*.html</url-pattern>
		<url-pattern>/</url-pattern>
	</servlet-mapping>

	<!-- <welcome-file-list>
		<welcome-file>jsp/index.jsp</welcome-file>
	</welcome-file-list> -->

	<!-- Front Controller for all GWT-Spring based servlets -->
	<servlet>
		<servlet-name>gwt</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet
		</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>

	<!-- Don't forget to declare a gwt-servlet.xml -->
	<servlet-mapping>
		<servlet-name>gwt</servlet-name>
		<url-pattern>de.spinfo.arc.editor/rpc/*</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>remoteLogging</servlet-name>
		<servlet-class>de.spinfo.arc.editor.server.EditorRemoteLoggingService
		</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>remoteLogging</servlet-name>
		<url-pattern>de.spinfo.arc.editor/remote_logging</url-pattern>
	</servlet-mapping>

	<!-- Configure caching: -->
	<!-- See http://docs.codehaus.org/display/JETTY/LastModifiedCacheControl -->
	<servlet>
		<servlet-name>default</servlet-name>
		<servlet-class>org.eclipse.jetty.servlet.DefaultServlet</servlet-class>
		<init-param>
			<param-name>cacheControl</param-name>
			<param-value>max-age=3600,public</param-value>
		</init-param>
	</servlet>

	<!-- Remove at least some whitespaces from the generated HTML -->
	<!-- See http://stackoverflow.com/questions/208736/strip-whitespace-from-jsp-output -->
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<trim-directive-whitespaces>true</trim-directive-whitespaces>
		</jsp-property-group>
	</jsp-config>
	
	<servlet>
	<servlet-name>workingUnitServlet</servlet-name>
		<servlet-class>de.spinfo.arc.editor.server.WorkingUnitServiceImpl</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>workingUnitServlet</servlet-name>
		<url-pattern>/arc_editor/service</url-pattern>
	</servlet-mapping>
</web-app>
