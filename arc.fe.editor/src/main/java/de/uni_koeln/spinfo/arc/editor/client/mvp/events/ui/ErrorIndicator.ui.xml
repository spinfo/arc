<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
	.widget {
		color: #ffffff;
		background: #ff3333;
		width: 150px;
		height: 50px;
		border-radius: 10px;
		box-shadow: 8px 8px 4px #666;
		font-family: Verdana, sans-serif;
		font-weight: bold;
		font-size: 16px;
	}
	
	.content {
		text-align: center;
		width: 100%;
		height: 100%;
	}
	
	.title {
		text-align: center;
		vertical-align: middle;
		padding: 5px;
		background-color: red;
		font-size: 20px;
		font-weight: 900;
	}
	
	.title2 {
		text-align: center;
		vertical-align: middle;
		padding: 5px;
		background-color: #EBF5FF;
		font-size: 18px;
		font-weight: normal;
	}
	
	.title3 {
		text-align: center;
		vertical-align: middle;
		padding: 5px;
		margin: 5px;
		font-size: 16px;
		font-weight: normal;
	}
	
	.infoBlock {
		background-color: red;
	}
	
	.info2 {
		text-align: center;
		margin-left: auto;
		margin-right: auto;
		padding: 10px;
		background-color: #E0F5FF;
		font-size: 18px;
		font-weight: normal;
	}
	
	.subInfo {
		text-align: left;
		margin-left: auto;
		margin-right: auto;
		padding: 15px;
		background-color: #EBF5FF;
		font-size: 20px;
		font-weight: normal;
	}
	
	.bg {
		background-color: #E0F5FF;
	}
	</ui:style>
<!-- 	<g:ScrollPanel> -->

		<g:FlowPanel addStyleNames="{style.infoBlock}">
			<g:HorizontalPanel ui:field="horizontalHeaderPanel"
				width="100%" height="100%" addStyleNames="{style.title}">
				<g:Label ui:field="headerLabel" addStyleNames="{style.title}">
					this pop is diplaying if an error has occoured while loading content to be edited and or displayed...
				</g:Label>
			</g:HorizontalPanel>
			<g:Label ui:field="contentLabel" addStyleNames="{style.title2}">
				please contact the admin of this application in order to get help"
			</g:Label>
			<g:Label ui:field="contentLabel2" addStyleNames="{style.title3}"> 
				If this popup freezes thus nothing happens after 20 seconds please refresh this page with your browser. Thank you!
			</g:Label>
		</g:FlowPanel>
<!-- 	</g:ScrollPanel> -->
</ui:UiBinder> 
