<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.title {
			text-align: center;
			vertical-align: middle;
			padding: 5px;
			background-color: silver;
			font-size: 20px;
			font-weight: 900;
		}

		.infoBlock {

		}

		.info {
			text-align: left;
			margin-left: auto;
			margin-right: auto;
			padding: 10px;
			background-color: #E0F5FF;
			font-size: 20px;
			font-weight: normal;
		}

		.subInfo {
			text-align: left;
			margin-left: auto;
			margin-right: auto;
			padding: 15px;
			background-color: #EBF5FF;
			font-size: 20px;
			font-weight: normal;
		}

		.outterSpace {
			margin: auto;
		}
	</ui:style>
	<g:VerticalPanel ui:field="headerPanel">
		<!-- <g:Label ui:field="headerText" addStyleNames="{style.title}"> -->
		<!-- choose a -->
		<!-- working unit -->
		<!-- </g:Label> -->
		<g:VerticalPanel width="100%" height="100%"
			addStyleNames="{style.info}" ui:field="contentPanel">
			<g:Label ui:field="contentText" addStyleNames="{style.info}">
				Please Register
			</g:Label>

			<g:HTMLPanel>
				<table width="100%" height="100%">
					<tr>
						<td align="left">
							<g:Label>First Name</g:Label>
						</td>
						<td align="right">
							<g:TextBox ui:field="firstName" width="93%" height="100%"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td align="left">
							<g:Label>Last Name</g:Label>
						</td>
						<td align="right">
							<g:TextBox ui:field="lastName" width="93%" height="100%"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td align="left">
							<g:Label>email</g:Label>
						</td>
						<td align="right">
							<g:TextBox ui:field="email" width="93%" height="100%"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td align="left">
							<g:Label>user name</g:Label>
						</td>
						<td align="right">
							<g:TextBox ui:field="username" width="93%" height="100%"></g:TextBox>
						</td>
					</tr>
					<tr>
						<td align="left">
							<g:Label>enter password</g:Label>
						</td>
						<td align="right">
							<g:PasswordTextBox ui:field="password" width="93%"
								height="100%"></g:PasswordTextBox>
						</td>
					</tr>
					<tr>
						<td align="left">
							<g:Label>enter password again</g:Label>
						</td>
						<td align="right">
							<g:PasswordTextBox ui:field="password2" width="93%"
								height="100%"></g:PasswordTextBox>
						</td>
					</tr>
					<tr>
						<hr style="width:100%;" />
						<td>
							<g:Button ui:field="backButton">back</g:Button>
						</td>
						<td align="right">
							<g:Button ui:field="registerButton">register</g:Button>
						</td>
					</tr>
				</table>
			</g:HTMLPanel>
		</g:VerticalPanel>
	</g:VerticalPanel>
	<!-- </g:DecoratorPanel> -->

</ui:UiBinder> 