<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
		<ui:style>
	
	.title {
		font-size: 18px;
	}
	</ui:style>
		<g:FocusPanel ui:field="allFocusWrapperPanel">

		<g:HTMLPanel>
				<table width="100%" height="100%" >
				<tr>
					<td>
						<g:Label ui:field="selectedWordLabel" styleName="{style.title}">selected word</g:Label>
					</td>
					<td>
						<g:Label ui:field="selectedPosLabel" styleName="{style.title}">[not tagged]</g:Label>
					</td>
						<hr style="width:100%;" />
				</tr>
			<tr>
				<td>
					<g:Label ui:field="newFormLabel">enter a new form</g:Label>
				</td>
			</tr>
			<tr>
				<td>
					<g:TextBox ui:field="formInputTextBox" width="93%" height="100%"/>
				</td>
				<td>
					<g:Button ui:field="saveFormBtn">save</g:Button>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label ui:field="newPosLabel">select a part of speech tag</g:Label>
				</td>
			</tr>
			<tr>
				<td>
					<g:ListBox ui:field="posListBox" width="100%" height="100%"/>
				</td>
				<td>
					<g:Button ui:field="savePosBtn">save</g:Button>
				</td>
			</tr>
			<tr>
				<td>
					<g:Label ui:field="editCoordinatesLabel">edit coordinates</g:Label>
				</td>
			</tr>
			<tr>
				<td>
					<g:Button ui:field="editCoordinatesBtn">edit coordinates</g:Button>
				</td>
				<td>
					<g:Button ui:field="saveCoordinatesBtn">save</g:Button>
				</td>
			</tr>
			<tr align="center">
				<td >
				<hr style="width:100%;" />
					<g:Button ui:field="prevWordBtn" >prev</g:Button>
					<g:Button ui:field="nextWordBtn" >next</g:Button>
					<g:Button ui:field="cancelBtn">close</g:Button>

				</td>
			</tr>
		</table>
		
	</g:HTMLPanel>

		</g:FocusPanel>


</ui:UiBinder> 